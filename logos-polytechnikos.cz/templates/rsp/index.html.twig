{% extends "layout.html.twig" %}

{% block content %}
    {# todo: doddělat widgety úvodní stránka #}
    {% if app.user is null %}
        {% include "rsp/about.html.twig" %}
        {# include 'article/public_articles_widget.html.twig' #}
    {% endif %}
    {% if is_granted('ROLE_REDAKTOR') or is_granted('ROLE_SEFREDAKTOR') %}
        {% include 'article/redaktor_widget.html.twig' %}
    {% endif %}
    {% if is_granted('ROLE_RECENZENT') %}
        {% set cardTitle %}<ul class="nav nav-pills card-header-pills">
            <li class="nav-item">
                <a class="nav-link active" href="{{ path('rsp') }}">Články k recenzi</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('app_review_myreviewedarticle') }}">Recenzované články</a>
            </li>
        </ul>
        {% endset %}
        {% include 'article/recenzent_widget.html.twig' %}
    {% endif %}

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('rspIndex') }}
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('rspIndex') }}
{% endblock %}