{% extends "layout.html.twig" %}

{% block content %}
    <div class="row justify-content-center">
        <div class="col col-xl-10 col-lg-12">
            <div class="card">
                    <div class="card-header">Pokyny pro přispěvatele</div>
                    <div class="card-body">
                    {% if setting.settings.instructions is not null %}
                        {{ setting.settings.instructions|raw }}
                    {% else %}
                        <div class="alert alert-warning">Instrukce zatím nebyly vyplněny.</div>
                    {% endif %}
                    </div>
            </div>
        </div>
    </div>
{% endblock %}