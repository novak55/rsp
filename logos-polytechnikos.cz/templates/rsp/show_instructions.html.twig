{% extends "layout.html.twig" %}

{% block content %}
    <div class="row justify-content-center">
        <div class="col col-xl-10 col-lg-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between d-flex justify-content-between">Pokyny pro přispěvatele
                    {% if is_granted('ROLE_REDAKTOR') %}
                    <a class="btn btn-sm btn-warning"
                       title="Upravit pokyny pro přispěvatele"
                       href="{{ path('app_index_changeinstruction') }}"><i class="fa fa-pen"></i>
                    </a>
                    {% endif %}
                </div>
                    <div class="card-body">
                    {% if setting.settings.instructions is not null %}
                        {{ setting.settings.instructions|replace({'%sablona%': '<a href="' ~ path('app_file_downloadtemplate', {template: setting.settings.activeTemplate.id}) ~ '">Šablona</a>'})|raw }}
                    {% else %}
                        <div class="alert alert-warning">Instrukce zatím nebyly vyplněny.</div>
                    {% endif %}
                    </div>
            </div>
        </div>
    </div>
{% endblock %}