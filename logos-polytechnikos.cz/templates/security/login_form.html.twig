{% extends 'layout.html.twig' %}

{% block title %}{% trans %}Přihlášení do systému{% endtrans %}{% endblock %}

{% block content %}
    <div class="row justify-content-center">
        <div class="col col-lg-4 col-md-5">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey }}</div>
            {% endif %}
            <div class="row">
                <form action="{{ path('login') }}" method="POST" class="alert alert-primary col col-sm-12"  style="width: 30rem;">
                <div class="form-group row">
                    <div class="col-sm-4">
                        <label for="_username" class="col-form-label">{% trans %}Váš login{% endtrans %}:</label>
                    </div>
                    <div class="col-sm-8">
                        <input class="form-control" type="text" name="_username" value="{{ lastUsername }}" id="_username" size="45">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-4">
                        <label for="_password" class="col-form-label">{% trans %}Vaše heslo{% endtrans %}:</label>
                    </div>
                    <div class="col-sm-8">
                        <input class="form-control" type="password" name="_password" id="_password">
                    </div>
                </div>
                <div class="separator"></div>
                <button type="submit" class="btn btn-primary mb-2 offset-5">Přihlásit</button>
                </form>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="text-center">Zapomněli jste heslo? <a href="{{ path('app_forgot_password_request') }}">Můžete obnovit heslo</a></div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}