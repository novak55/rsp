<div class="row justify-content-center">
    <div class="col col-xl-10 col-lg-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title float-left">{% trans %}Články{% endtrans %}</h5>
                <div class="float-right">
                    <div class="form-inline my-2 my-lg-0">
                        <label for="#table-page-size">Záznamů na stránce: </label>
                        <select id="table-page-size" class="form-control ml-2 mr-sm-2" data-pagelen-for=".dataTables_filter">
                            <option>10</option>
                            <option>50</option>
                            <option>100</option>
                            <option>200</option>
                            <option>300</option>
                            <option value="-1" selected>Vše</option>
                        </select>
                        <input class="form-control mr-sm-2" type="search" placeholder="{% trans %}Hledat{% endtrans %}" aria-label="Search" data-search-in=".dataTables_filter">
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive dt-hide-filter">
                    <table class="table table-striped datatable_filter">
                        <thead>
                        <tr>
                            <th><i class="fa fa-signature">&nbsp;</i>Název</th>
                            <th><i class="fa fa-flag">&nbsp;</i>Stav</th>
                            <th><i class="fa fa-user">&nbsp;</i>Autor</th>
                            <th><i class="fa fa-calendar-alt">&nbsp;</i>Datum vložení</th>
                            <th class="datatable-ignore"><i class="fa fa-users">&nbsp;</i>Spoluautoři</th>
                            <th class="datatable-ignore"><i class="fa fa-users">&nbsp;</i>Recenzenti</th>
                            <th class="datatable-ignore"><i class="fa fa-tasks">&nbsp;</i>Činnosti</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% if articles|length > 0 %}
                            {% for article in articles %}
                                <tr>
                                    <td data-sort="{{ article.name }}" data-filter="{{ article.name }}">
                                        {% if article.currentAttachment is not null %}
                                            <a href="{{ path('app_file_downloadattachment', {fileAttachment: article.currentAttachment.id}) }}"
                                               title="Stáhnout článek">{{ article.name }}</a>
                                        {% else %}
                                            <abbr title="Článek není dostupný">{{ article.name }}</abbr>
                                        {% endif %}
                                    </td>
                                    <td>{{ article.currentState.state }}{% if article.currentState.id == 4 %} ({{ article.reviews|length }}x){% endif %}</td>
                                    <td data-sort="{{ article.author.surname }}">{{ article.author.fullNameByName }}</td>
                                    <td data-sort="{{ article.insertDate|date('U') }}"
                                        class="text-center">{{ article.insertDate|date('d.m.Y') }}</td>
                                    <td class="col-2">
                                        {% if article.collaborators|length > 0 %}
                                            {% for collaborator in article.collaborators %}
                                                {{ collaborator.fullName }}<br>
                                            {% endfor %}
                                        {% else %}
                                            Neuvedeni
                                        {% endif %}
                                    </td>
                                    <td>
                                        <ul class="list-group with-action">
                                            {% if article.reviews|length > 0 %}
                                                {% for review in article.reviews %}
                                                    <li title="{% if review.reviewerStatement|length > 0 %}{{ review.reviewerStatement.statement }}{% endif %}"
                                                        class="list-group-item {% if review.reviewerStatement|length > 0%}{% if review.reviewerStatement.id == 1 %} list-group-item-success{% elseif review.reviewerStatement.id == 2 %} list-group-item-warning{% else %} list-group-item-danger{% endif %}{% endif %}">
                                                        <div class="title">{{ review.reviewer.fullName }}</div>
                                                        <div class="action">
                                                            {% if review.reviewState.id > 1 %}
                                                                <a href="#"
                                                                   class="btn btn-sm btn-outline-secondary confirm"
                                                                   data-confirm-title="Recenze článku"
                                                                   data-confirm-buttons='<button type="button" class="btn btn-primary mb-2" data-dismiss="modal">Zavřít</button>'
                                                                   data-confirm-url="{{ path('app_review_showreview', {review: review.id}) }}"
                                                                   title="Zobrazit posudek"><i class="fa fa-eye"></i>
                                                                </a>
                                                            {% endif %}
                                                        </div>
                                                    </li>
                                                {% endfor %}
                                            {% endif %}
                                            {% if article.hasDifferentReviewersStatement or (article.reviews|length < 2 and (article.currentState.id == 2 or article.currentState.id == 4)) %}
                                                <li class = "list-group-item">
                                                    <a href="{{ path('app_user_addreviewerarticle', {article: article.id}) }}" class="btn btn-sm btn-outline-secondary open-form w-100" title="Přidat recenzenta"><i class="fa fa-user-plus"></i></a>
                                                </li>
                                            {% endif %}
                                        </ul>
                                    </td>
                                    <td class="text-center nowrap">
                                        {% if is_granted('ROLE_REDAKTOR') %}
                                            {% if article.reviews|length > 1 and article.hasFilledReviewersStatement and is_granted('ROLE_REDAKTOR') %}
                                                <a href="{{ path('app_article_showarticle', {article: article.id}) }}"
                                                   class="btn btn-sm btn-outline-secondary"
                                                   title="Zobrazit detail článku"><i class="fa fa-info-circle"></i>
                                                </a>
                                            {% else %}
                                                <a href="#"
                                                   class="btn btn-sm btn-light disabled"
                                                   title="Zobrazit detail článku"><i class="fa fa-info-circle"></i>
                                                </a>
                                            {% endif %}
                                            {% if article.currentState.id == 2 %}
                                                <a href="{{ path('app_article_returnarticlenotsuitablethema', {article: article.id, uri: app.request.get('_route')}) }}"
                                                    class="btn btn-outline-secondary btn-sm confirm"
                                                    data-confirm-title = "Vrácení článku"
                                                    data-confirm-text = "Opravdu si přejete vrátit článek: {{ article.name}} z důvodu tématické nevhodnosti?"
                                                    title="Vrátit článek z důvodu tématické nevhodnosti."><i class="fa fa-arrow-left"></i></a>
                                            {% else %}
                                                <a href="#"
                                                   class="btn btn-light btn-sm confirm disabled"
                                                   title="Vrátit článek z důvodu tématické nevhodnosti."><i class="fa fa-arrow-left"></i></a>
                                            {% endif %}
                                            <a href="#"
                                               class="btn btn-sm btn-outline-secondary"
                                               data-confirm-url="{{ path('app_user_changeprofile', {user: user.id, url: app.request.requestUri}) }}"
                                               data-confirm-title="Upravit profil uživatele"
                                               data-confirm-buttons='<button type="button" class="btn btn-outline-secondary btn-sm" data-dismiss="modal">Zavřít</button>'
                                               title="Historie"><i class="fa fa-history"></i>
                                            </a>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td colspan="4" class="bg-danger text-center">Nebyl nalezen žádný článek.</td>
                            </tr>
                        {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>